<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Put your Behat services here -->
        <service
                id="brille24.behat.page.admin.customer_options.create"
                class="Tests\Brille24\CustomerOptionsPlugin\Behat\Page\CustomerOption\CreatePage"
                parent="sylius.behat.page.admin.crud.create"
        >
            <argument>brille24_admin_customer_option_create</argument>
        </service>
        <service
                id="brille24.behat.page.admin.customer_options.update"
                class="Tests\Brille24\CustomerOptionsPlugin\Behat\Page\CustomerOption\UpdatePage"
                parent="sylius.behat.page.admin.crud.update"
        >
            <argument>brille24_admin_customer_option_update</argument>
        </service>
        <service
                id="brille24.behat.page.admin.customer_options.index"
                parent="sylius.behat.page.admin.crud.index"
        >
            <argument>brille24_admin_customer_option_index</argument>
        </service>

        <service
            id="brille24.behat.context.customer_options"
            class="Tests\Brille24\CustomerOptionsPlugin\Behat\Context\ManagingCustomerOptionsContext"
        >
            <argument type="service" id="brille24.behat.page.admin.customer_options.index" />
            <argument type="service" id="brille24.behat.page.admin.customer_options.create" />
            <argument type="service" id="brille24.behat.page.admin.customer_options.update" />
            <argument type="service" id="__symfony__.brille24.customer_options_plugin.repository.customer_option" />
            <tag name="fob.context_service" />
        </service>
    </services>
</container>
