<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping">
    <class name="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroup">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>code</value>
            </option>
            <option name="message">brille24.form.customer_option_groups.unique</option>
            <option name="groups">sylius</option>
        </constraint>

        <property name="code">
            <constraint name="NotNull">
                <option name="groups">sylius</option>
            </constraint>
        </property>

        <property name="optionAssociations">
            <constraint name="Brille24\CustomerOptionsPlugin\Validator\Constraints\CustomerOptionAssociationConstraint">
                <option name="message">brille24.form.customer_option_groups.duplicate_option</option>
            </constraint>
        </property>

    </class>
</constraint-mapping>