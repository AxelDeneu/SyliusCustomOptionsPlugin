<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroup" table="brille24_customer_option_group">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="code"/>
        
        <one-to-many target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroupTranslation"
                     mapped-by="translatable" field="translations" />
        
        <one-to-many target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionAssociation"
                     mapped-by="group" field="optionAssociations">
            <order-by>
                <order-by-field name="position" direction="ASC" />
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>