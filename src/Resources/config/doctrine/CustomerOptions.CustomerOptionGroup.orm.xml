<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionGroup" table="brille24_customer_option_group">
        <id name="id"/>

        <field name="code"/>
        
        <one-to-many target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionGroupTranslation" 
                     mapped-by="translatable" field="translations" />
        
        <one-to-many target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionAssociation"
                     mapped-by="group" field="customerOptionAssociations">
            <order-by>
                <order-by-field name="position"/>
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>