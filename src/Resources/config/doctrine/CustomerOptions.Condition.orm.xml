<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass
            name="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\Condition"
            table="brille24_customer_option_group_validator_condition"
    >
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="comparator" type="string" />

        <field name="value" type="integer" />

        <many-to-one
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\Validator"
                field="validator"
        >
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>

        <many-to-one
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOption"
                field="customerOption"
        />
    </mapped-superclass>
</doctrine-mapping>