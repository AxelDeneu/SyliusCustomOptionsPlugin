<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity
            name="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\Validator\Validator"
            table="brille24_customer_option_group_validator"
    >
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <one-to-one field="errorMessage" target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\Validator\ErrorMessage">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column on-delete="SET NULL" />
        </one-to-one>

        <one-to-many
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\Validator\Condition"
                mapped-by="validator"
                field="conditions"
                orphan-removal="true"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\Validator\Constraint"
                mapped-by="validator"
                field="constraints"
                orphan-removal="true"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroup"
                field="customerOptionGroup"
        />
    </entity>
</doctrine-mapping>