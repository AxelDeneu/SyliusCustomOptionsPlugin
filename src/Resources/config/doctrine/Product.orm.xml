<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="Brille24\CustomerOptionsPlugin\Entity\Product" table="sylius_product">

        <one-to-many target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionValuePrice"
                     mapped-by="product" field="customerOptionValuePrices" orphan-removal="true"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroup"
                field="customerOptionGroup"
                inversed-by="products"
        >
            <join-column on-delete="SET NULL" />
        </many-to-one>

    </mapped-superclass>
</doctrine-mapping>