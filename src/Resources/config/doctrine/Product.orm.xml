<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="Brille24\CustomerOptionsPlugin\Entity\Product" table="sylius_product">

        <many-to-one target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroup"
                     field="customerOptionGroup"/>

        <many-to-many target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionValuePrice"
                      field="customerOptionPrices">
            <join-table name="brille24_product_value_prices">
                <join-columns>
                    <join-column name="product_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="value_price_id" referenced-column-name="id" unique="true"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </mapped-superclass>
</doctrine-mapping>