<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionTranslation" table="brille24_customer_option_translation">
        <id name="id"/>

        <field name="name" nullable="true"/>

        <many-to-one target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOption" field="translatable" inversed-by="translations"/>
    </entity>
</doctrine-mapping>