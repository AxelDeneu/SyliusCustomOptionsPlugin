<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionValuePrice"
            table="brille24_customer_option_value_price">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="percent" type="float" />
        <field name="amount" type="integer" />

        <field name="type" type="string" length="12" />

        <one-to-one field="customerOptionValue" target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionValue">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column on-delete="CASCADE" />
        </one-to-one>
    </entity>
</doctrine-mapping>