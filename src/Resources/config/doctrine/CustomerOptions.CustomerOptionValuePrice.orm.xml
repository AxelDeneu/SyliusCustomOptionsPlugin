<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionValuePrice"
            table="brille24_customer_option_value_price">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="percent" type="float"/>
        <field name="amount" type="integer"/>

        <field name="type" type="string" length="12"/>

        <many-to-one
                field="customerOptionValue"
                target-entity="Brille24\CustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionValue"
                inversed-by="prices"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>

        <many-to-one
                target-entity="Sylius\Component\Core\Model\Channel"
                field="channel"
        >
        </many-to-one>
    </entity>
</doctrine-mapping>