<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionGroup" table="brille24_customer_option_group">
        <id name="id"/>

        <field name="code"/>
        <many-to-many
                target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOption"
                mapped-by="groups"
                field="customerOptions"
        >
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>
    </entity>
</doctrine-mapping>