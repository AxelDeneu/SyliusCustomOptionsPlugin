<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionAssociation" table="brille24_customer_option_association">
        <unique-constraints>
            <unique-constraint columns="option_id,group_id"/>
        </unique-constraints>

        <id name="id" />
        <field name="position" type="integer" />

        <many-to-one target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOption" field="option"/>
        <many-to-one target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionGroup" field="group"/>
    </entity>
</doctrine-mapping>