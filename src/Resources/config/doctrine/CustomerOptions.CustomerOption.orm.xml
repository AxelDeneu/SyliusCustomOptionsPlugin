<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOption" table="brille24_customer_option">
        <id name="id"/>

        <field name="type" type="string" unique="false" nullable="false"/>
        <field name="code" type="string" unique="true" nullable="false"/>
        <field name="required" type="boolean"/>

        <one-to-many target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionTranslation" mapped-by="translatable"
                     field="translations" />

        <one-to-many target-entity="Brille24\CustomerOptionsBundle\Entity\CustomerOptions\CustomerOptionAssociation"
                     mapped-by="option" field="groupAssociation">
            <order-by>
                <order-by-field name="position"/>
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>