<container xmlns="http://symfony.com/schema/dic/services">
    <services>

        <service
                class="Brille24\CustomerOptionsPlugin\Factory\OrderItemOptionFactory"
                id="brille24.customer_options_plugin.factory.order_item_option_factory"
        >
            <argument type="expression">service('sylius.context.channel').getChannel()</argument>

            <argument type="service" id="brille24.repository.customer_option"/>
            <argument type="service" id="brille24.customer_options_plugin.services.customer_option_value_resolver"/>
        </service>

        <service
                class="Brille24\CustomerOptionsPlugin\Factory\CustomerOptionFactory"
                id="brille24.fixture.factory.customer_option"
        >
            <argument type="service" id="brille24.customer_options_plugin.repository.customer_option_group" />
            <argument type="service" id="sylius.repository.channel" />
        </service>

        <service
                class="Brille24\CustomerOptionsPlugin\Factory\CustomerOptionGroupFactory"
                id="brille24.fixture.factory.customer_option_group"
        >
            <argument type="service" id="brille24.customer_options_plugin.repository.customer_option" />
            <argument type="service" id="sylius.repository.product" />
        </service>

        <service
                class="Brille24\CustomerOptionsPlugin\Factory\ProductFactory"
                id="brille24.fixture.factory.product"
        >
            <argument type="service" id="sylius.fixture.example_factory.product"/>
            <argument type="service" id="sylius.repository.channel"/>
            <argument type="service" id="brille24.customer_options_plugin.repository.customer_option_group" />
            <argument type="service" id="brille24.customer_options_plugin.repository.customer_option_value" />
        </service>
    </services>
</container>